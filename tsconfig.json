{
    "compilerOptions": {
        "lib": ["es5", "es6"],
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./build",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        // "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitAny": true,
        "baseUrl": "./src",
        "paths": {
            "@/*": ["*"]
        }
    },
    "exclude": ["./node_modules", "./build"]
}
